<?xml version="1.0" encoding="UTF-8"?>
<server-settings>
  <!-- Application domains -->
  <application>
    <id>hp</id>
    <domain>hp.transer.com</domain>
  </application>
  <application>
    <id>hpstage</id>
    <domain>hpstage.transer.com</domain>
    <setting-id>tm-*,img</setting-id>
    <extension-param>
      <param-name>img.include.script.url</param-name>
      <param-value>http://hpmanage.transer.com/edit/site_imgchg/</param-value>
    </extension-param>
    <extension-param>
      <param-name>tm-*.include.script.url</param-name>
      <param-value>http://hpmanage.transer.com/edit/site_dic/</param-value>
    </extension-param>
    <extension-param>
      <param-name>tm-*|img.licence.param</param-name>
      <param-value>clkey</param-value>
    </extension-param>
  </application>
  
  <!-- Translation Server -->
  <translation-server>
    <url>http://ts.transer.com:12000/</url>
    <url application="hp" client="ax">http://tsextra.transer.com/</url>
    <url application="hp" client="cr">http://tsextra.transer.com/</url>
    <url application="hp" client="dj">http://tsextra.transer.com/</url>
    <url application="hp" client="zz">http://tsextra.transer.com/</url>
    <url application="hpstage" client="zz">http://tsextra.transer.com/</url>
    <connection-timeout>5000</connection-timeout>
    <socket-timeout>300000</socket-timeout>
  </translation-server>

  <!-- 信頼できるクライアント -->
  <trusted-client>127.0.0.1</trusted-client>
  
  <!-- リクエストエラーページ-->
  <extension-param>
    <param-name>request.error.page</param-name>
    <param-value>/WEB-INF/pages/requestError.jsp</param-value>
  </extension-param>
  <!-- robots.txt -->
  <extension-param>
    <param-name>robots.txt.path</param-name>
    <param-value>/opt/site-translate/config/robots.txt</param-value>
  </extension-param>
  <!-- 備案ライセンス -->
  <extension-param>
    <param-name>icp.licence.footer</param-name>
    <param-value>&#x3C;div id=&#x22;site-translate-footer&#x22; cltx=&#x22;exclude&#x22; style=&#x22;width:100% !important; padding: 10px 0 !important; text-align:center !important; font-family:SimSun !important;&#x22;&#x3E;&#36797;ICP&#22791;11018103&#21495;-1&#x3C;/div&#x3E;</param-value>
  </extension-param>
</server-settings>
