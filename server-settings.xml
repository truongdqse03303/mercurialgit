<?xml version="1.0" encoding="UTF-8"?>
<server-settings>
  <!-- Host Server -->
  <server>
    <url>http://hp.transer.com/</url>
  </server>
  
  <!-- Translation Server -->
  <translation-server>
    <url>http://ts03-03.transer.com:13000/</url>
    <connection-timeout>5000</connection-timeout>
    <socket-timeout>300000</socket-timeout>
  </translation-server>

  <!-- 信頼できるクライアント -->
  <trusted-client>127.0.0.1</trusted-client>
  
  <!-- リクエストエラーページ-->
  <extension-param>
    <param-name>request.error.page</param-name>
    <param-value>/WEB-INF/pages/requestError.jsp</param-value>
  </extension-param>
</server-settings>
