<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>鶴屋百貨店</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>tsuruya-dept/service dee59560e17908d5f1ec39db1602be9735092917</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.tsuruya-dept.co.jp" ssl="true" />
  </request-list>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>

  <!-- Microsoft Translatorロゴを表示する設定ID -->
  <extension-param>
   <param-name>mst.logo.show</param-name>
   <param-value>v,id</param-value>
  </extension-param>
  
  <!-- 翻訳対象外 -->
  <url-list type="ignore">
    <url>http://www\.tsuruya-dept\.co\.jp/shop/</url>
    <url>http://www\.tsuruya-dept\.co\.jp/event/web/images/HTML5/index\.html</url>
  </url-list>
  
  <!-- 免責ヘッダーを絶対座標で指定 -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:auto !important;}</param-value>
  </extension-param>
  
    <!-- デフォルトでHTML断片翻訳を行うかどうか -->
  <extension-param>
   <param-name>default.fragment.translate</param-name>
   <param-value>false</param-value>
 </extension-param>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
