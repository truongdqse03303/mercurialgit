<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>株式会社JTBパブリッシング</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>tokyogrown/service b022d6bae28d3e3e46960a2bcb1eb16b1a6460fd</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="tokyogrown.jp" />
    <request hostname="test.tokyogrown.jp" />
    <request hostname="tokyoclip.jp" />
  </request-list>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic dGd3ZWJ1c2VyOmszbk5CMSNuYjMxIWRu</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://tokyogrown\.jp.*</param-value>
    </param>
  </resource-handler>

  <!-- 免責ヘッダーを絶対座標で指定 -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:100% !important; height:44px; position: fixed; top:0;}#site-translate-header-wrapper p{font-size:10px;line-height: 12px;}#site-translate-message{display:table-cell; height:44px; vertical-align:middle; width:5000px;}</param-value>
  </extension-param>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
