<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>静岡市役所</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>city-shizuoka/service 709fd9e1e3e874540a70f4124936b2eae98ecce5</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.city.shizuoka.lg.jp" ssl="true" />
    <request hostname="www.city.shizuoka.jp" />
    <request hostname="test2015web.city.shizuoka.jp" />
  </request-list>
  
  <!-- 使用する設定IDの一覧 -->
  <setting-id>mb-*</setting-id>
  
  <!-- デフォルトでHTML断片翻訳を行うかどうか -->
  <extension-param>
   <param-name>default.fragment.translate</param-name>
   <param-value>false</param-value>
  </extension-param>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
