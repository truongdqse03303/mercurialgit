<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>SHIBUYA BRIDGE</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>shibuyabridge/service ddfeed1c98f8a6e1e82d50be11dff84414229a4b</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="shibuyabridge.jp" ssl="true" />
    <request hostname="stage.shibuyabridge.jp" />
  </request-list>

   <extension-param>
  <param-name>site.translate.header.style</param-name>
  <param-value>client-settings.css</param-value>
  </extension-param>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic c2RyOnNoaWJ1eWEwOTAx</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>(http|https)://stage\.shibuyabridge\.jp.*</param-value>
    </param>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
