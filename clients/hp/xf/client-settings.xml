<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>株式会社ランドアバウトエーピーアイ（静岡市スポーツ振興課）</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>spsz/service fa9f3ee25fb11e01f8675a4a40782060df4d3384</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.spsz.jp" />
  </request-list>
  
      <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic c3BzejowNTQyMjExMDM3</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://www\.spsz\.jp/.*</param-value>
    </param>
  </resource-handler>
  
    <!-- 免責事項をフッターに表示 -->
  <extension-param>
    <param-name>show.translate.header</param-name>
    <param-value>footer</param-value>
  </extension-param>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
