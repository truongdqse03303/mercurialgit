  <name>池袋ショッピングパーク</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>web-isp/service ee4166238927505fb27ddcc5594e836b03192868</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.web-isp.co.jp" />
  </request-list>
  
  <!-- デフォルトでHTML断片翻訳を行うかどうか -->
