<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>かながわ国際交流財団</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>kifjp/service c4b3e5981f788391b7bd11d3a8877afae0a5ce6a</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.kifjp.org" />
  </request-list>

  <extension-param>
  <param-name>site.translate.header.style</param-name>
  <param-value>client-settings.css</param-value>
  </extension-param>

  <!-- Microsoft Translatorロゴを表示する設定ID -->
  <extension-param>
   <param-name>mst.logo.show</param-name>
   <param-value>v</param-value>
  </extension-param>

  <!-- サイトで使用される文字セット -->
  <charset>UTF-8</charset>
</client-settings>
