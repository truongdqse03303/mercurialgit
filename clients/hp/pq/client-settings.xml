<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>イオンモール岡山</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>aeonmall-okayama/service a701ad07d748209b0724bf27deefc1b718f6bc0d</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="aeonmall-okayama.com" />
  </request-list>
  
  <!-- デフォルトでHTML断片翻訳を行うかどうか -->
  <extension-param>
   <param-name>default.fragment.translate</param-name>
   <param-value>false</param-value>
  </extension-param>
  
  <!-- 免責ヘッダーを絶対座標で指定 -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:auto !important;}</param-value>
  </extension-param>
  
  <!-- URLとリソース種類のマッピングの設定 -->
  <!--ajax通信配下にhtmlファイルを呼んでいるクラスがある。TmplDeck.prototype.drawのthis._fetchedText.match(re)のfetchedText.match-->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>http://aeonmall-okayama.com/(json_api/.*|theme/RenewalPage/templates.html)</param-value>
     </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>BINARY</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
