<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>株式会社ハーベス</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>harves/service 2833bb317aff4892e9fcd0faa7509a99ab022f8a</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.harves.co.jp" />
    <!-- Googleサイト内検索 -->
    <request hostname="www.google.co.jp" path="/search(\?.*&amp;?domains=www\.harves\.co\.jp.*)?" />
  </request-list>
  
  <!-- 使用する設定IDの一覧 -->
  <setting-id>mb-*</setting-id>

  <!-- HTML断片翻訳対象外のURL -->
  <url-list type="ignore-fragment">
    <url>.+</url>
  </url-list>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
