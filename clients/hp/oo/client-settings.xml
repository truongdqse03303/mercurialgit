<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>株式会社ソマード</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>kougeihin-aoyama/service d4b512c66cc98db79c64086c09cdc569535449f0</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="kougeihin.jp" />
    <request hostname="kir112712.kir.jp" />
  </request-list>
  
  <!-- デフォルトでHTML断片翻訳を行うかどうか -->
  <extension-param>
   <param-name>default.fragment.translate</param-name>
   <param-value>false</param-value>
 </extension-param>
 
<!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic NHNpdGU6dGVzdDAzMjA=</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://kir112712\.kir\.jp/.*</param-value>
    </param>
  </resource-handler>

  <!-- 免責ヘッダー -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:100% !important; border: none;} @media screen and (max-width: 640px) { #site-translate-header-wrapper p { text-align: left; padding-left: 5.8em; }}</param-value>
  </extension-param>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
