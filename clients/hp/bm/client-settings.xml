<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>三越銀座店</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>mitsukoshi/service 834d5255c150c66a3d33fd8752ded488e8a171b4</licence>

  <!-- 翻訳対象のリクエスト情報 （必須）-->
  <request-list>
    <request hostname="www.mitsukoshi.co.jp">
      <path-list>
        <path value="/shop\?EcLogicName=storeinfo.storetopInfo&amp;tenpoCd=12(?:&amp;.+|#.+)?$" />
        <path value="/shop\?omeNextPageName=/pc/store/jsp/1210/" />
        <path value="/shop$" />
        <path value="/store/1210/" />
      </path-list>
    </request>
    <request hostname="mitsukoshi.mistore.jp">
      <path-list>
        <path value="/store/ginza.*" />
      </path-list>
    </request>
  </request-list>

  <!-- 翻訳しないURLの一覧 -->
  <url-list type="ignore">
    <url>http://www\.mitsukoshi\.co\.jp/store/1210/fcs/(?!images/).*</url>
    <url>http://www\.mitsukoshi\.co\.jp/store/1210/obentou/(?:index\.html)</url>
    <url>http://www\.mitsukoshi\.co\.jp/store/1210/mailmagazine/index\.html</url>
    <url>http://www\.mitsukoshi\.co\.jp/shop\?omeNextPageName=/pc/store/jsp/1210/(?:women|accessory|mens|baby|living|food)/(?:index|new)\.jsp</url>
  </url-list>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
  
  <!-- サイトで使用される文字セット -->
  <charset>Shift_JIS</charset>

  <!-- ブランド検索ページのURLエンコーディングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.URLEncodeResourceHandler</type>
    <param>
      <param-name>encode.url.1</param-name>
      <param-value>http://www\.mitsukoshi\.co\.jp/shop$</param-value>
    </param>
    <param>
      <param-name>encode.charset.1</param-name>
      <param-value>Shift_JIS</param-value>
    </param>
  </resource-handler>
</client-settings>