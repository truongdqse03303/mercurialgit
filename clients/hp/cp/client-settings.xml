<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>土佐清水市観光協会</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>shimizu-kankou/service 90fb9eff0916c9e714688dee1590dfdf33dc4801</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="shimizu-kankou.com" />
    <request hostname="www.shimizu-kankou.com" />
  </request-list>

  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>^http://shimizu-kankou\.com/rss/jsRSS\.cgi\?url=http.+</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>JAVASCRIPT</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <charset>Shift_JIS</charset>
</client-settings>
