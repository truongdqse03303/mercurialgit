<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>SHIBUYA STREAM</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>shibuyastream/service 853763695b619476bda9cd236cc1280530669c25</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="shibuyastream.jp" ssl="true" />
  </request-list>

   <extension-param>
  <param-name>site.translate.header.style</param-name>
  <param-value>client-settings.css</param-value>
  </extension-param>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic c3RyZWFtOnN0cmVhbTMyMTM=</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>(http|https)://shibuyastream\.jp.*</param-value>
    </param>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
