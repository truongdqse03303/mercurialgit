<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>新宿区役所</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>shinjuku/service e66d60af6516c15702374b1164b6040ce0499219</licence>

  <!-- 翻訳対象のリクエスト情報 （必須）-->
  <request-list>
    <request hostname="www.city.shinjuku.lg.jp" />
    <request hostname="www.faq.city.shinjuku.lg.jp" />
    <request hostname="www.micosfit.jp" path="/snjk/" />
    <request hostname="micosfit.jp" path="/snjk/" />
    <request hostname="www.regasu-shinjuku.or.jp" />
  </request-list>

  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>^http://www\.regasu-shinjuku\.or\.jp/\?p=314$</param-value>
    </param>
    <param>
      <param-name>resource.http.method</param-name>
      <param-value>POST</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>JAVASCRIPT</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- 翻訳しないURLの一覧 -->
  <url-list type="ignore">
    <url>http://www\.city\.shinjuku\.lg\.jp/foreign/.*</url>
  </url-list>
</client-settings>
