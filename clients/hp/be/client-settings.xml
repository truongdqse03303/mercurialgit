<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>倉敷紡績株式会社</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>kurabo/service d33680d519be9136799c7aa5fdda34f1f4acf54f</licence>
  
  <!-- 翻訳対象のリクエスト情報 （必須）-->
  <request-list>
    <request hostname="www.kurabo.co.jp" path="/el/|/img/" />
  </request-list>
  
  <!-- 翻訳しないURLの一覧 -->
  <url-list type="ignore">
    <url>http://www\.kurabo\.co\.jp/el/world/</url>
  </url-list>

  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>http://www.kurabo.co.jp/el/rd/fla/[a-z]{2}/tech4ch-[a-z]{2}\.html</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>BINARY</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
</client-settings>
