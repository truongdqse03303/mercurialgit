      <param-name>resource.url.pattern</param-name>
      <param-value>http://(sake|www)\.(stage|stage2)\.biccamera\.com/(bs|bc)/(c_bl|api)/.*</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
