  <licence>jr-shikoku/service 39ec44a4ecf4706e88415e7bcb74016a3a4efd55</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.jr-shikoku.co.jp" ssl="true" />
    <request hostname="www8.jr-shikoku.co.jp" />
  </request-list>

  <extension-param>
	<param-name>site.translate.header.style</param-name>
	<param-value>client-settings.css</param-value>
