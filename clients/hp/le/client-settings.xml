<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>森ビル株式会社</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>arkhills/service 4505d0769d2e4f4ba8dfbc2fb84a8826f1439735</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.arkhills.com" />
    <!-- テスト用 -->
    <request hostname="ec2-52-196-151-154.ap-northeast-1.compute.amazonaws.com" />
    <request hostname="arkhills11.loftwork.info" />
  </request-list>

  <!-- 免責事項をフッターに表示 -->
  <extension-param>
    <param-name>show.translate.header</param-name>
    <param-value>footer</param-value>
  </extension-param>

  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:footer#l-footer {color: red;font-weight: bold;} #site-translate-message{width:auto !important;}</param-value>
  </extension-param>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic cmgtd2ViLXVzZXI6YTRMdzdEZTU=</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://ec2-52-196-151-154\.ap-northeast-1\.compute\.amazonaws\.com/.*</param-value>
    </param>
  </resource-handler>

  <!-- HTML断片翻訳対象外のURL -->
  <url-list type="ignore-fragment">
    <url>.+</url>
  </url-list>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
