<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>日本能率協会</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>jma/service 19766d7d8c166b8dbdc200b7cf35c3862512f223</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.jma.or.jp">
      <path-list>
        <path value="/index\.(?:php|html)" />
        <path value="/news[0-9]{11}\.html" />
        <path value="/(?:about_jma|aboutsite|activity|admin|admission|contact|css|demo|envipolicy|faq|img|information|js|news|news_cms|popup|privacy|security|sitemap|pb)(?:/.*|$)$" />
      </path-list>
    </request>
  </request-list>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic YmZhY2U6OTI1Ng==</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://www\.jma\.or\.jp/pb/demo/.*</param-value>
    </param>
  </resource-handler>
  
  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
