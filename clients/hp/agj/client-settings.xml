<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>藤和ハウス</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>towa-house/service 4ba04746d4ee5b51f0e595c63d3e9b074eab00ac</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
	<request hostname="www.towa-house.co.jp" ssl="true">
		<path-list>
			<path value="/cn/search/.*" />
			<path value="/cn/list/.*" />
			<path value="/cn/detail/.*" />
			<path value="/cn/sp/.*" />
		</path-list>
		<path-list resource="true">
		    <path value="/php-bin/.*" />
		    <path value="/script/.*" />
		    <path value="/srch/.*" />
		    <path value="/bin/.*" />
		</path-list>
	</request>
  </request-list>

  <extension-param>
  <param-name>site.translate.header.style</param-name>
  <param-value>client-settings.css</param-value>
  </extension-param>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic Y2hpbmVzZTpjaGluZXNlMjAxOQ==</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>(http|https)://www\.towa-house\.co\.jp/cn/.*</param-value>
    </param>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
