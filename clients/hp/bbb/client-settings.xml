<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>デモ用(heartcore)</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>heartcore_demo/service 322344cb9c802bc12b67a0bccfe4a4e2fd83fc1e</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="[^/]+" />
  </request-list>
  
  <!-- デフォルトでHTML断片翻訳を行うかどうか -->
  <extension-param>
   <param-name>default.fragment.translate</param-name>
   <param-value>false</param-value>
  </extension-param>
  
  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
  
  <!-- PDF翻訳 -->
  <extension-param>
    <param-name>pdf.translate</param-name>
    <param-value>true</param-value>
  </extension-param>
  <!-- トークンチェック(ロボット対策) -->
  <extension-param>
    <param-name>token.check.resource</param-name>
    <param-value>pdf</param-value>
  </extension-param>
  <!-- サイトで使用される文字セット -->
  <charset>UTF-8</charset>
  <charset url=".+\.pdf">UTF-8</charset>
</client-settings>
