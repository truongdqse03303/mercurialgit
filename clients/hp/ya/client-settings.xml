  <name>山形県置賜総合支庁（おきたまジェーピー）</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>oki-tama/service 0309bffb88da915720d5ca7671b88b032f5a52e3</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
