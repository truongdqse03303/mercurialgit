<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>丸井今井</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>marui-imai/service 0370ecb92823a6f9e125d765cc9eebef06f34539</licence>

  <!-- 翻訳対象のリクエスト情報 （必須）-->
  <request-list>
    <request hostname="www.marui-imai.jp" />
  </request-list>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
  
    <!-- 免責ヘッダーは表示しない -->
  <extension-param>
    <param-name>show.translate.header</param-name>
    <param-value>false</param-value>
  </extension-param>
  
    <!-- robots.txt -->
  <resource-handler>
    <type name="robotstxt">jp.co.crosslanguage.translate.url.request.process.resource.handler.ContentRespondResourceHandler</type>
    <param>
      <param-name>response.url.pattern</param-name>
      <param-value>.+/robots.txt</param-value>
    </param>
    <param>
      <param-name>response.content.path</param-name>
      <param-value>classpath:/script/robots.txt</param-value>
    </param>
    <param>
      <param-name>response.content.type</param-name>
      <param-value>text/plain</param-value>
    </param>
    <priority>1</priority>
  </resource-handler>
  <!-- ホストヘッダーの検証-->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.HostHeaderCheckResourceHandler</type>
    <priority>1</priority>
    <terminal>true</terminal>
  </resource-handler>
  <!-- リソースの不正なパターンを検証 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.PatternValidateResourceHandler</type>
    <priority>1</priority>
    <terminal>true</terminal>
  </resource-handler>
  
    <!-- デフォルトでHTML断片翻訳を行うかどうか -->
  <extension-param>
   <param-name>default.fragment.translate</param-name>
   <param-value>false</param-value>
 </extension-param>
   
  <!-- サイトで使用される文字セット -->
  <charset>UTF-8</charset>
</client-settings>
