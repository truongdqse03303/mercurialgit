<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>ジェイアールセントラルビル</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>towers/service 7aad03d2ef51e1ec005e7c7bc6c5f747caf499c8</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.towers.jp" />
    <request hostname="sta.towers.hosting.jtis.co.jp" />
  </request-list>

  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic dG93ZXJzOlRPV0VSUzE1MTEwNQ==</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://sta\.towers\.hosting\.jtis\.co\.jp.*</param-value>
    </param>
  </resource-handler>

  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:auto !important;} .cmn-gl_nav_bar--links {width: 320px;}.cmn-gl_nav_bar--btn:nth-child(1) { margin-right: 148px; }</param-value>
  </extension-param>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
