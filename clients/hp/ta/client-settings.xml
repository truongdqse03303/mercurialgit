  <name>ニューオータニイン札幌</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>newotanisapporo/service b824acc23422b112283fc5e4017fc7b23a598ee6</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="newotanisapporo.com" />
    <request hostname="www.newotanisapporo.com" />
  </request-list>
  
  <!-- デフォルトでHTML断片翻訳を行うかどうか -->
