<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>阪神百貨店</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>hanshin-dept/service 2b8faa0e71149927cb42a8b31742a4838dffc491</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.hanshin-dept.jp" path="/honten/" />
    <request hostname="www.hankyu-hanshin-dept.co.jp" path="/lsnews/" />
  </request-list>

  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>.+/shopping/tab\.html/</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>HTML_FRAGMENT</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
</client-settings>
