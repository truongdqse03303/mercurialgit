<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>株式会社ルミネ（タブレットページ）</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>newoman/service 7d20d33b9264e73450393317742300c7e83315b6</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.newoman.jp" />
    <request hostname="stage.newoman.jp" path="/tb/webroot" />
  </request-list>
  
    <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic bmV3b21hbjpIa3NpMTk5</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://stage\.newoman\.jp/tb/webroot/.*</param-value>
    </param>
  </resource-handler>

  <!-- 免責ヘッダーは表示しない -->
  <extension-param>
    <param-name>show.translate.header</param-name>
    <param-value>false</param-value>
  </extension-param>
  
  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
