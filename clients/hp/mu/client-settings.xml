<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>渋谷区役所</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>city-shibuya/service fd2a3fe4520d3b78e9dc9011e4e50594d074bdc8</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.city.shibuya.tokyo.jp" />
    <request hostname="bosai.city.shibuya.tokyo.jp" />
  </request-list>
  
  <!-- Basic認証 -->
  <resource-handler>
    <type name="basic">jp.co.crosslanguage.translate.url.request.process.resource.handler.HTTPHeaderAppendResourceHandler</type>
    <param>
      <param-name>header.name.auth</param-name>
      <param-value>Authorization</param-value>
    </param>
    <param>
      <param-name>header.value.auth</param-name>
      <param-value>Basic c2I6MTEzMA==</param-value>
    </param>
    <param>
      <param-name>header.applied.auth</param-name>
      <param-value>http://bosai\.city\.shibuya\.tokyo\.jp/.*</param-value>
    </param>
  </resource-handler>
  
  <!-- 使用する設定IDの一覧 -->
  <setting-id>mb-*</setting-id>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
