<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>mic21</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>mic21/mic2101 8271c0c566eaf0a889c4b787a18ad7eb83f031bf</licence>

  <!-- 翻訳対象のリクエスト情報 （必須）-->
  <request-list>
    <request hostname="www.mic21.com" />
    <request hostname="mic.diver-online.com" />
    <request hostname="appleworld.com" />
    <request hostname="www.tos-asp.jp" path="/agent/mic21/js/search\?type=tour.+" />
    <request hostname="shop3.genesis-ec.com">
      <path-list>
        <path value="/[^?]+\?(?:.+&amp;)?shopcd=17302(?:&amp;.+)?$" />
        <path value="/17302/css/.+\.(?:css|js|html)" />
      </path-list>
    </request>
  </request-list>

  <!-- 翻訳しないURLの一覧 -->
  <ignore-url-list>
    <url>.*/n/staff/subimage_list\?.+</url>
  </ignore-url-list>
  
  <!-- shop3.genesis-ec.com内ページのURLエンコーディングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.URLEncodeResourceHandler</type>
    <param>
      <param-name>encode.url.shop3</param-name>
      <param-value>^http://shop3\.genesis-ec\.com/search/list\.asp\?shopcd=17302&amp;(?:.+?&amp;)?(?:kwd=[^&amp;]+|kwd2=[^&amp;]+)(?:(?!&amp;.*page=[0-9]+)&amp;.+?)?$</param-value>
    </param>
    <param>
      <param-name>encode.charset.shop3</param-name>
      <param-value>Shift_JIS</param-value>
    </param>
    <priority>4</priority>
    <terminal>true</terminal>
  </resource-handler>
  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>^http://www\.tos-asp\.jp/agent/mic21/js/search\?type=tour.+</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>JAVASCRIPT</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>
</client-settings>
