<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>イオンモールりんくう泉南</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>rinkusennan-aeonmall/service 2be240c022279d6b8f55f5807afd26d4758a57ea</licence>

  <!-- 翻訳対象のリクエスト情報 （必須）-->
  <request-list>
    <request hostname="rinkusennan-aeonmall.com" />
  </request-list>
  
  <!-- 翻訳しないURLの一覧 -->
  <url-list type="ignore">
    <url>http://rinkusennan-aeonmall.com/floorguide.*</url>
  </url-list>
  
  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>http://rinkusennan-aeonmall\.com/js/weather/getWeather\.php\?Wtype=.+</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>XML</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>
  
  <!-- 免責ヘッダーを絶対座標で指定 -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:auto !important;}</param-value>
  </extension-param>
  
  <!-- サイトで使用される文字セット -->
  <charset>Shift_JIS</charset>
</client-settings>
