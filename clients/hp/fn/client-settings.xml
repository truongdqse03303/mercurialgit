<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>阪急百貨店</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>hankyu-dept/service 9936ad4617234c5adef6fd76f5416a5c6d0fc923</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.hankyu-dept.co.jp" path="/honten/" />
    <request hostname="www.hankyu-hanshin-dept.co.jp" path="/lsnews/" />
  </request-list>
  
  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>.+/shopping/tab\.html/</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>HTML_FRAGMENT</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
  
  <!-- サイトで使用される文字セット -->
  <charset>Shift_JIS</charset>
</client-settings>
