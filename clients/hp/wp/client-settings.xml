  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>nihon-kankou/service 6b4ab4207fdc3e10adef486cecf8660ec6114310</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.nihon-kankou.or.jp" />
    <request hostname="en.nks.iamdn.com" />    
  </request-list>

      <!-- URLとリソース種類のマッピングの設定 -->
