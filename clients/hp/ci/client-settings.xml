<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>南西楽園リゾート</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>nanseirakuen/service 4813045eea03dfe717a3f450ed14c2cb89b9d74c</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.nanseirakuen.com" />
  </request-list>

  <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.RedirectResourceHandler</type>
    <param>
      <param-name>redirect.from</param-name>
      <param-value>.+</param-value>
    </param>
    <param>
      <param-name>e.redirect.to</param-name>
      <param-value>http://www.nanseirakuen.com/en/</param-value>
    </param>
    <priority>1</priority>
  </resource-handler>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>
</client-settings>
