<client-settings>
  <!-- クライアント名（任意） -->
  <name>丸正印刷株式会社（㈱ポイントピュール）</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>pointpyuru/service 0a7ee17329292fc5581cb51785eeb15d3d27896f</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="pointpyuru.co.jp" />
  </request-list>
  
    <!-- 免責ヘッダーを絶対座標で指定 -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:auto !important;}</param-value>
  </extension-param>

 <!-- ホストヘッダーの検証-->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.HostHeaderCheckResourceHandler</type>
    <priority>1</priority>
    <terminal>true</terminal>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
