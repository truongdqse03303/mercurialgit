<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>一般社団法人　山口県観光連盟</name>

  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>oidemase/service 0be13a4e044643f006995160e804b32124425a9e</licence>

  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.oidemase.or.jp" />
  </request-list>
  
    <!-- 免責ヘッダーを絶対座標で指定 -->
  <extension-param>
    <param-name>site.translate.header.style</param-name>
    <param-value>style:#site-translate-header-wrapper{width:auto !important;}</param-value>
  </extension-param>
  
    <!-- URLとリソース種類のマッピングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.SpecifiedTypeResourceCreateHandler</type>
    <param>
      <param-name>resource.url.pattern</param-name>
      <param-value>http://www\.oidemase\.or\.jp/wp-content/plugins/wptouch-pro-3/themes/foundation/modules/font-awesome/.*</param-value>
    </param>
    <param>
      <param-name>resource.type.name</param-name>
      <param-value>BINARY</param-value>
    </param>
    <priority>4</priority>
  </resource-handler>

  <!-- サイトで使用される文字セット -->
  <!--charset>UTF-8</charset-->
</client-settings>
