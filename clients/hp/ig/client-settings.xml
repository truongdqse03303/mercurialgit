<client-settings>
  <!-- クライアント名（任意） -->
  <name>土岐市役所</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>toki/service 189fc614c7e28ce292b5fec6bf0c5469a415ea5d</licence>
  
  <!-- 翻訳対象となるリクエストの一覧 -->
  <request-list>
    <request hostname="www.city.toki.lg.jp" />
    <request hostname="www.city.toki.gifu.jp" />
    <request hostname="bousai.city.toki.gifu.jp" />
    <request hostname="gkanri.city.toki.lg.jp" />
  </request-list>
  
  <!-- 翻訳しないURLの一覧 -->
  <url-list type="ignore">
    <url>http://www\.city\.toki\.lg\.jp/(?:discuss|d1w_reiki|wcore/public_comment)/.*</url>
    <url>http://www\.city\.toki\.lg\.jp/wcore/hp/page000006900/hpg000006893\.htm</url>
