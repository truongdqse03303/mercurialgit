<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>かに道楽</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>douraku/service 3a9d82029cd07d60df2f6ff0c197278e5e12a93b</licence>
  
  <!-- クライアントが使用できるドメインの一覧 -->
  <domain-list>
    <domain>http://(?:www\.)?douraku.co.jp/</domain>
  </domain-list>
  
  <!-- 翻訳しないURLの一覧 -->
  <ignore-url-list>
    <url>http://douraku\.co\.jp/company/.*</url>
    <url>http://douraku\.co\.jp/recruit/.*</url>
    <url>http://www\.douraku\.co\.jp/shopping/.*</url>
  </ignore-url-list>
  
  <!-- HTML断片翻訳を行わないURLの一覧 -->
  <cancel-fragment-list>
    <url>http://douraku\.co\.jp/[^/]+/shop/[^/]+/map/.*</url>
  </cancel-fragment-list>
  
  <!-- 拡張パラメータ（任意）。複数指定可能 -->
  <extension-param>
    <param-name>use.domain.setting</param-name>
    <param-value>true</param-value>
  </extension-param>
</client-settings>
