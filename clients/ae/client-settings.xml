<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>mic21</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <licence>mic21/mic2101 8271c0c566eaf0a889c4b787a18ad7eb83f031bf</licence>

  <!-- クライアントが使用できるドメインの一覧 -->
  <domain-list>
    <domain>http://www\.mic21\.com</domain>
    <domain>http://mic\.diver-online\.com</domain>
    <domain>http://appleworld\.com/</domain>
    <domain>http://www\.tos-asp\.jp/agent/mic21/js/search\?type=tour.+</domain>
    <domain>http://shop3\.genesis-ec\.com/[^?]+\?(?:.+&amp;)?shopcd=17302(?:&amp;.+)?$</domain>
    <domain>http://shop3\.genesis-ec\.com/17302/css/.+\.(?:css|js|html)</domain>
  </domain-list>

  <!-- 翻訳しないURLの一覧 -->
  <ignore-url-list>
    <url>.*/n/staff/subimage_list\?.+</url>
  </ignore-url-list>
  
  <!-- shop3.genesis-ec.com内ページのURLエンコーディングの設定 -->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.URLEncodeResourceHandler</type>
    <param>
      <param-name>encode.url.shop3</param-name>
      <param-value>^http://shop3\.genesis-ec\.com/search/list\.asp\?shopcd=17302&amp;(?:.+?&amp;)?(?:kwd=[^&amp;]+|kwd2=[^&amp;]+)(?:(?!&amp;.*page=[0-9]+)&amp;.+?)?$</param-value>
    </param>
    <param>
      <param-name>encode.charset.shop3</param-name>
      <param-value>Shift_JIS</param-value>
    </param>
    <priority>4</priority>
    <terminal>true</terminal>
  </resource-handler>

  <!-- 設定IDのためにドメインを使用する -->
  <extension-param>
    <param-name>use.domain.setting</param-name>
    <param-value>true</param-value>
  </extension-param>
</client-settings>
