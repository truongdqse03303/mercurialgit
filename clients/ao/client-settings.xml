<?xml version="1.0" encoding="UTF-8"?>
<client-settings>
  <!-- クライアント名（任意） -->
  <name>ＭＣクラウド</name>
  
  <!-- Translation Serverのライセンスキー（必須） -->
  <license-key>admin f4fee6298151b3be9bb0fa4b8dd61f214e6320ec</license-key>

  <!-- クライアントが使用できるドメイン （必須）-->
  <domain-list>
    <domain>http://(?:www\.)?mc-cloud.jp/</domain>
  </domain-list>

  <!-- コンテンツキャッシュ使用有無の設定-->
  <use-cache>true</use-cache>

  <!-- 設定IDのためにドメインを使用する -->
  <extension-param>
    <param-name>use.domain.setting</param-name>
    <param-value>true</param-value>
  </extension-param>

  <!-- リリース前の公開制限 -->
  <!-- 113.36.193.30以外からのアクセスに対して404を返す -->
  <!-- 公開時は、下記の設定を削除する！！-->
  <resource-handler>
    <type>jp.co.crosslanguage.translate.url.request.process.resource.handler.ClientAccessRestrictResourceHandler</type>
    <param>
      <param-name>client.address</param-name>
      <param-value>113.36.193.30</param-value>
    </param>
  </resource-handler>
</client-settings>
